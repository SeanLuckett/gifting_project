.row
  #logo
    = image_tag("http://www.placekitten.com/150/150")
  %ul.breadcrumb
    %li.active Events

.row
  %ul.nav.nav-tabs
    %li= link_to "Dash", dashboard_index_path
    %li.active
      = link_to "Events", '#'
    %li= link_to "Recipients", user_recipients_path(current_user)
  .span1
  .span4
    %h3 Select an event to edit
  .span4
    #new-event.pull-right
      .btn= link_to "New", new_user_event_path(current_user)

.row
  .span1
  .span6
    - @events.each do |event|
      = render :partial => "event", :locals => { :event => event }

